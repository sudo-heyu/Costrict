<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE" />
    <!-- Android 13+ 通知权限 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- 锁屏通知权限 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <!-- 系统级通知权限 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- 额外的通知权限 -->
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />
    <!-- 额外的通知权限 -->
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:name="com.heyu.safetybelt.application.MainApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SafetybeltRegulator"
        android:enableOnBackInvokedCallback="true">

        <service
            android:name="com.heyu.safetybelt.regulator.service.UnderService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <service
            android:name="com.heyu.safetybelt.operator.service.BleService"
            android:enabled="true"
            android:exported="false"
            android:stopWithTask="false"
            android:foregroundServiceType="connectedDevice" />

        <activity
            android:name="com.heyu.safetybelt.common.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.heyu.safetybelt.common.activity.LoginActivity"
            android:exported="false" />

        <activity
            android:name="com.heyu.safetybelt.regulator.activity.MainActivityRegulator"
            android:exported="false" />

        <activity
            android:name="com.heyu.safetybelt.operator.activity.MainActivityOperator"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden|screenLayout|uiMode"
            android:launchMode="singleTask"
            android:alwaysRetainTaskState="true" />

<!--        <activity-->
<!--            android:name="com.heyu.safetybelt.operator.activity.LoginActivity"-->
<!--            android:exported="false" />-->

<!--        <activity-->
<!--            android:name="com.heyu.safetybelt.regulator.activity.LoginActivity"-->
<!--            android:exported="false" />-->

<!--        <activity-->
<!--            android:name="com.heyu.safetybelt.operator.activity.SplashActivity"-->
<!--            android:exported="false" />-->

<!--        <activity-->
<!--            android:name="com.heyu.safetybelt.regulator.activity.SplashActivity"-->
<!--            android:exported="false" />-->

        <!-- LeanCloud 必须的服务声明 -->
        <service android:name="cn.leancloud.push.PushService" />
        <receiver
            android:name="cn.leancloud.push.LCBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

    </application>

</manifest>




