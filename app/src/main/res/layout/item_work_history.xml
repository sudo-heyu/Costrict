<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                app:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/history_date_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                tools:text="2024年5月28日" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:columnCount="2">

            <TextView
                android:id="@+id/start_time_text"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:drawablePadding="4dp"
                android:text="开始: 08:30"
                android:textColor="@color/text_secondary"
                app:drawableStartCompat="@android:drawable/ic_media_play" />

            <TextView
                android:id="@+id/end_time_text"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:drawablePadding="4dp"
                android:text="结束: 17:30"
                android:textColor="@color/text_secondary"
                app:drawableStartCompat="@android:drawable/ic_media_pause" />

            <TextView
                android:id="@+id/duration_text"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_marginTop="4dp"
                android:drawablePadding="4dp"
                android:text="时长: 8小时"
                android:textColor="@color/text_secondary"
                app:drawableStartCompat="@android:drawable/ic_menu_recent_history" />

            <TextView
                android:id="@+id/alert_count_text"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_marginTop="4dp"
                android:drawablePadding="4dp"
                android:text="报警: 3次"
                android:textColor="@color/status_danger"
                app:drawableStartCompat="@android:drawable/stat_notify_error" />
        </GridLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>