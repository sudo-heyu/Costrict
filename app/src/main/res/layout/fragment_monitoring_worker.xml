<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".operator.fragment.MonitoringFragment">

    <!-- Back button with text, moved further to the left -->
    <TextView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@drawable/ic_arrow_back"
        android:drawablePadding="4dp"
        android:drawableTint="@color/white"
        android:focusable="true"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="返回"
        android:textColor="@color/text_primary_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Centering container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Main Content Container (No longer a card) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <!-- Table Header -->
            <LinearLayout
                android:id="@+id/table_header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="部位"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary_dark" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="状态"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary_dark" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/sensor_slot_border_dark"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <!-- Table Body -->
            <LinearLayout
                android:id="@+id/table_body_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fixed_column_container"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/scrollable_data_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" />

            </LinearLayout>

            <!-- Bottom Button Container -->
            <FrameLayout
                android:id="@+id/button_container_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"/>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>
