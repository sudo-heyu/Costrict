<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="User Avatar"
                android:src="@drawable/worker"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_worker_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="姓名:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_worker_name"
                app:layout_constraintStart_toEndOf="@id/iv_avatar" />

            <TextView
                android:id="@+id/tv_worker_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@id/ib_edit_name"
                app:layout_constraintStart_toEndOf="@id/label_worker_name"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="张三" />

            <ImageButton
                android:id="@+id/ib_edit_name"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Edit Name"
                android:scaleType="centerInside"
                android:src="@drawable/change"
                app:layout_constraintBottom_toBottomOf="@id/tv_worker_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_worker_name" />

            <TextView
                android:id="@+id/label_employee_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工号:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@id/tv_employee_id"
                app:layout_constraintStart_toStartOf="@id/label_worker_name" />

            <TextView
                android:id="@+id/tv_employee_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@id/ib_edit_employee_id"
                app:layout_constraintStart_toEndOf="@id/label_employee_id"
                app:layout_constraintTop_toBottomOf="@id/tv_worker_name"
                tools:text="12345" />

            <ImageButton
                android:id="@+id/ib_edit_employee_id"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Edit Employee ID"
                android:scaleType="centerInside"
                android:src="@drawable/change"
                app:layout_constraintBottom_toBottomOf="@id/tv_employee_id"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_employee_id" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>